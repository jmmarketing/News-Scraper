<!-------------------------- EXAMPLE POSTS   -------- ---------------------------------->

<div class="container-fluid">
    {{#each articles}}
    <div class="card my-1" data-id="{{this._id}}">
        <div class="card-header">
            <h4>
                <a href="{{this.link}}" target="_blank" class="post-link">{{this.title}}</a>
                <button type="button" class="btn btn-success float-right" id="delete-button"
                    data-id="{{this._id}}">Un-Save</button>

                <button type="button" class="btn btn-primary float-right mx-2" data-toggle="modal"
                    data-target="#exampleModalCenter" data-id="{{this._id}}" id="show-notes">Notes</button>
            </h4>
        </div>
        <div class="card-footer text-muted">
            <div class="float-left">
                <span id="last-message"><strong>Last Reply: </strong>{{this.lastMessage}}</span>
                <span id="post-views"><i class="far fa-eye mx-3"> {{this.views}}</i></span>
                <span id="post-replies"><i class="far fa-comments"> {{this.replies}}</i></span>
            </div>


        </div>
    </div>
    {{else}}
    <!--------------------------- IF NO SCRAPE RESULTS / SHOW THIS SECTION ------->
    <div id="saved-hide-this">
        <div class="alert alert-info mx-3 text-center" role="alert">
            <h4>No Posts Saved! You Gotta Save Something!</h4>
        </div>

        <div class="card mx-3 mb-2">
            <div class="card-header">
                Come On, Go Browse Some Posts...
            </div>
            <div class="card-body">
                <a href="/" role="button" class="btn btn-info btn-block">Browse Posts</a>
            </div>
        </div>
    </div>
    <!--------------------------- END --- IF NO SCRAPE RESULTS / SHOW THIS SECTION ------->
    {{/each}}

</div>



<!------------ MODAL FOR NOTES ---------------->



<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Article Notes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Saved Notes -->




                
                {{#each articles.notes}}
                <div class="card" data-id="{{articles._id}}">
                    <div class="card-body">
                       <span id="populate-note">{{this.text}}</span> 
                        <button type="button" class="btn btn-danger float-right" id="delete-note" data-id="{{articles._id}}">X</button>
                    </div>
                </div>
                {{/each}}

                <!-- Note Input -->
                <form>
                    <div class="form-group mt-2">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                            placeholder="Enter New Note" id="note-text"></textarea>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="save-note" data-id="{{articles._id}}">Save Note</button>
            </div>
        </div>
    </div>
</div>